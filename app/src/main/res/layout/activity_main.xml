<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Censo DAM 2024"
        android:textColor="#0B1D76"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Formulario de Registo"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:text="Apellidos y nombres:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Correo Electrónico:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/TXT_CORREO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/TXT_CORREO"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/TXT_NOMBREAPELLIDO"
        app:layout_constraintTop_toBottomOf="@+id/TXT_NOMBREAPELLIDO" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Clave:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/TXT_FECHA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="date"
        android:text="@string/TXT_FECHA"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/TXT_TELEFONO"
        app:layout_constraintTop_toBottomOf="@+id/TXT_TELEFONO" />

    <EditText
        android:id="@+id/TXT_PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/TXT_PASSWORD"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/TXT_CORREO"
        app:layout_constraintTop_toBottomOf="@+id/TXT_CORREO" />

    <EditText
        android:id="@+id/TXT_HORA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="time"
        android:text="@string/TXT_HORA"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/TXT_FECHA"
        app:layout_constraintTop_toBottomOf="@+id/TXT_FECHA" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Teléfono de contacto:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Fecha de Nacimiento:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Hora de Nacimiento:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Zona de Residencia:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/TXT_TELEFONO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/TXT_TELEFONO"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/TXT_PASSWORD"
        app:layout_constraintTop_toBottomOf="@+id/TXT_PASSWORD" />

    <EditText
        android:id="@+id/TXT_NOMBREAPELLIDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/TXT_NOMBREAPELLIDO"
        android:textColor="#2196F3"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="54dp"
        android:text="¿Cuántas personas viven en la vivienda?"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="406dp">

    </RadioGroup>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Qué opina sobre los bonos otorgados por el gobierno?"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/TXT_INGRESOS"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/TXT_INGRESOS"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/TXT_PERSONAS"
        app:layout_constraintTop_toBottomOf="@+id/TXT_PERSONAS" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ingreso Promedio de la Familia:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/TXT_PERSONAS"
        android:layout_width="81dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/TXT_PERSONAS"
        android:textColor="#2196F3"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/RB_RURAL" />

    <CheckBox
        android:id="@+id/CHECK_PERRO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="Perro"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toEndOf="@+id/CHECK_GATO"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <CheckBox
        android:id="@+id/CHECK_GATO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Gato"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <CheckBox
        android:id="@+id/CHECK_PATO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="Pato"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toEndOf="@+id/CHECK_POLLO"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <CheckBox
        android:id="@+id/CHECK_OTRO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="Otro"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toEndOf="@+id/CHECK_PATO"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <CheckBox
        android:id="@+id/CHECK_POLLO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="Pollo"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toEndOf="@+id/CHECK_PERRO"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/TXT_OPINION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/TXT_OPINION"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Mascotas que viven en casa:"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/TXT_OPINION" />

    <RadioButton
        android:id="@+id/RB_URBANO"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:text="Urbano"
        android:textColor="#0B1D76"
        app:layout_constraintStart_toStartOf="@+id/TXT_HORA"
        app:layout_constraintTop_toBottomOf="@+id/TXT_HORA" />

    <RadioButton
        android:id="@+id/RB_RURAL"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:text="Rural"
        android:textColor="#0B1D76"
        app:layout_constraintEnd_toEndOf="@+id/TXT_HORA"
        app:layout_constraintTop_toBottomOf="@+id/TXT_HORA" />

    <Button
        android:id="@+id/boton_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#1559DE"
        android:text="@string/boton_enviar"
        android:textAlignment="textEnd"
        app:icon="@drawable/baseline_send_24"
        app:layout_constraintStart_toStartOf="@+id/CHECK_GATO"
        app:layout_constraintTop_toBottomOf="@+id/CHECK_OTRO" />

</androidx.constraintlayout.widget.ConstraintLayout>